<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>All posts</h2>
		<% @posts.each do |post| %>
			<div class="user_post">
				<p>
					<%= post.body %>
				</p>
				<% if current_user %>
				<h3>
					<%= link_to post.user.name, post.user %>
				</h3>
				<% end %>
			</div>
		<% end %>
	</div>
</div>